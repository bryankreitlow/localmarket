{>"core/layout"/}

{<title}Sign Up | LocalMart{/title}

{<styles}
<link href="/assets/css/colorpicker.css" rel="stylesheet"/>
{/styles}
{<scripts}
<script src="/assets/js/colorpicker/bootstrap-colorpicker.js"></script>
<script type="text/javascript">
  $(function(){
    var apple = $('#appleColor');
    $("#colorSelect").colorpicker().on('changeColor', function(ev) {
      apple.css('backgroundColor', ev.color.toHex());
    });
  });
</script>
{/scripts}

{<content}
<!-- Main hero unit for a primary marketing message or call to action -->
<div class="row-fluid" style="padding-top: 20px;">
  <div class="span6 offset2">
    <h2>Sign Up
      <div id="appleColor" style="background-color: #d68440; width: 64px; height: 64px; margin-top: -14px;" class="pull-right">
      <img style="height: 64px; width: 64px;" src="/assets/images/account/applemask64.png" />
      </div>
    </h2>
    <form method="post">
      <div class="controls-row">
        <div class="control-group span6">
          <label class="control-label">
            <span>First Name</span>
            <input class="span12" type="text" name="first">
          </label>
          <span class="help-block hide"></span>
        </div>
        <div class="control-group span6">
          <label class="control-label">
            <span>Last Name</span>
            <input class="span12" type="text" name="last">
          </label>
          <span class="help-block hide"></span>
        </div>
      </div>
      <div class="controls-row">
        <div class="control-group span6">
          <label class="control-label">
            <span>Email</span>
            <input class="span12" type="text" name="email">
          </label>
          <span class="help-block hide"></span>
        </div>
        <div class="control-group span6">
          <label class="control-label">
            <span>Color</span>
            <div class="input-append color" data-color="#d68440" data-color-format="hex" id="colorSelect">
              <input class="span11" type="text" name="color" value="#d68440" readonly>
              <span class="add-on"><i style="background-color: #d68440;"></i></span>
            </div>
          </label>
          <span class="help-block hide"></span>
        </div>
      </div>
      <div class="controls-row">
        <div class="control-group">
          <label class="span6 control-label">
          <span>Password</span>
            <input class="span12" type="password" name="password" >
          </label>
          <label class="span6 control-label">
            <span>Re-type Password</span>
            <input class="span12" type="password" >
          </label>
          <span class="help-block hide"></span>
        </div>
      </div>
      <div class="controls-row create-row">
        <button class="span4 btn-create btn btn-large btn-primary" type="submit">Sign Up</button>
      </div>
      </form>
  </div>

</div>
{/content}